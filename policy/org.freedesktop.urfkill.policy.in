<policyconfig>
  <vendor>The urfkill Project</vendor>

  <action id="org.freedesktop.urfkill.block">
    <_description>Block a specific killswitch type</_description>
    <_message>Authentication is required to set block on the killswitches by type</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

  <action id="org.freedesktop.urfkill.blockidx">
    <_description>Block a specific killswitch</_description>
    <_message>Authentication is required to set block on the killswitch</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

  <action id="org.freedesktop.urfkill.flight_mode">
    <_description>Enable flight mode</_description>
    <_message>Authentication is required to enable/disable flight mode</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>


</policyconfig>
